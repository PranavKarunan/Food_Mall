                <form  action="/resetPassword" method="post" id="userSignup" class="mx-1 mx-md-4">

                 



                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-phone fa-lg me-3 fa-fw" style="margin-top: 26px; margin-right: 5px"></i>


                    <div class="form-outline flex-fill mb-0">
                     
                      <label class="form-label" for="phoneno">Phone
