    let searchKey = document.getElementById('search').value
  
    $.ajax({
      url:'/searchInput',
      method:'post',
      data:{
        searchKey
      },    
      success:(response)=>{
        alert('aassdd')
        location.reload()
      }

    })
  }
</script>