<style>
body{
    background:#eee;
}

.card {
  width: auto;
  padding: 10px;
  border-radius: 20px;
  
  border: none;
  color: #fff;
  height: 350px;
  display: flex;
  position: relative;
  align-items: center;
  justify-content: center;
}

.amnt{
background: orange;
}

.perc{
  background: rgb(0, 225, 255);
}

.container {
  height: auto;
}

.card h1 {
  font-size: 30px;
  margin-bottom: 0px;
}

.card span {
  font-size: 28px;
}

.image {
  position: absolute;
  opacity: .1;
  left: 0;
  top: 0;
}

.image2 {
  position: absolute;
  bottom: 0;
  right: 0;
  opacity: .1;
